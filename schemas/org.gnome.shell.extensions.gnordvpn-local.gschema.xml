<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
    <schema id="org.gnome.shell.extensions.gnordvpn-local" path="/org/gnome/shell/extensions/gnordvpn-local/">
        <!-- See also: https://developer.gnome.org/glib/stable/gvariant-format-strings.html -->
        <key name="favorite-countries" type="s">
            <default>""</default>
        </key>
        <key name="favorite-cities" type="s">
            <default>""</default>
        </key>
        <key name="number-cities-per-countries" type="i">
            <range min="0" max="10000"/>
            <default>10</default>
        </key>
        <key name="favorite-servers" type="s">
            <default>""</default>
        </key>
        <key name="countries-selected-for-cities" type="as">
            <default>[]</default>
        </key>
        <key name="number-servers-per-countries" type="i">
            <range min="0" max="10000"/>
            <default>10</default>
        </key>
        <key name="countries-selected-for-servers" type="ai">
            <default>[]</default>
        </key>
        <key name="autoconnect" type="b">
            <default>false</default>
        </key>
        <key name="cybersec" type="b">
            <default>false</default>
        </key>
        <key name="firewall" type="b">
            <default>false</default>
        </key>
        <key name="killswitch" type="b">
            <default>false</default>
        </key>
        <key name="obfuscate" type="b">
            <default>false</default>
        </key>
        <key name="notify" type="b">
            <default>false</default>
        </key>
        <key name="ipv6" type="b">
            <default>false</default>
        </key>
        <key name="protocol" type="s">
            <default>"UDP"</default>
        </key>
        <key name="technology" type="s">
            <default>"OpenVPN"</default>
        </key>
    </schema>
</schemalist>